<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlogin3"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tituloLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/overlock_bold"
        android:text="decFusion"
        android:textAlignment="center"
        android:textColor="#343A40"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/overlock_bold"
        android:text="Olá! Faça login para continuar"
        android:textAlignment="center"
        android:textColor="#343A40"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloLogin"
        tools:layout_editor_absoluteX="50dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/border_radius_cinza_claro"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/etEmail-user"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/custom_input_login"
            android:drawableStart="@drawable/ic_baseline_email"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/overlock"
            android:hint="Digite seu E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etSenha-user"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/custom_input_login"
            android:drawableStart="@drawable/ic_baseline_lock"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/overlock"
            android:hint="Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogin-user"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/border_radius_azul"
            android:fontFamily="@font/overlock_bold"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#DFDFDF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/quicksand"
            android:text="Esqueceu sua senha ? "
            android:textAlignment="viewEnd"
            android:textColor="#343A40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconfinder_facebook_571114" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/overlock_bold"
                android:text="Entre com Facebook"
                android:textAlignment="viewStart"
                android:textColor="#343A40"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand"
                android:text="Novo no sistema?"
                android:textAlignment="textEnd"
                android:textColor="#343A40"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_novo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/overlock_bold"
                android:text="Realize seu cadastro"
                android:textColor="#343A40"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>