<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="874dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pesquisar_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:background="@drawable/custom_input_search"
                android:drawableStart="@drawable/ic_baseline_search"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Pesquisar"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_margin="12dp"
                android:background="@drawable/border_radius_banner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/overlock_bold"
                    android:text="Seja Bem vindo, Nome usuario"
                    android:textColor="#343A40"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCategoriasBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/overlock"
                    android:padding="4dp"
                    android:text="Categorias mais Populares"
                    android:textAlignment="textStart"
                    android:textColor="#141C3A"
                    android:textSize="26dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBanner1"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/iconfinder_home_support_centre_3200459" />

                    <ImageButton
                        android:id="@+id/btnBanner2"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/iconfinder_store_2_3338887" />

                    <ImageButton
                        android:id="@+id/btnBanner3"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="0"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/border_radius_btnbanner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBanner4"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/iconfinder_578_adventure_game_mario_obstacle_plant_game_gaming_genres_programing_4158595" />

                    <ImageButton
                        android:id="@+id/btnBanner5"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/border_radius_btnbanner" />

                    <ImageButton
                        android:id="@+id/btnBanner6"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/border_radius_btnbanner"
                        android:src="@drawable/border_radius_btnbanner" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/border_radius_profissionais"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/overlock_bold"
                    android:text="Acione um profissional"
                    android:textColor="#DFDFDF"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="12dp"
                android:background="@drawable/border_radius_profissionais"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/overlock_bold"
                    android:text="Compre atraves do Whatsapp"
                    android:textAlignment="center"
                    android:textColor="#DFDFDF"
                    android:textSize="32dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/mobile_inbox_pana__1_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aqui vai ficar a parte de dicas" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>